<h1 class="title">All Products</h1>
<div class="container">
  <% var count = 1; %>
  <% products.forEach(function(product){ %>
    <% if(count % 3 === 1){ %>
      <div class="row">
    <% } %>
    <div class="four columns">
      <div class="productItem" data-productname="<%= product.product_name %>">
         <div class = "deleted">This item has been deleted</div>
          <div class="overlay">
            <a href=""><i class="fa fa-pencil" aria-hidden="true"></i></a>
            <a href="/show/<%= product.product_name %>"><i class="fa fa-eye" aria-hidden="true"></i></a>
            <form action="/cms/deleteproduct/<%= product.product_name %>" method="POST">
            <button class="fa deleteproduct fa-trash" aria-hidden="true"></button>
            </form>
          </div>
          <a class="goToProduct" href=""><img src="/products/<%= product.product_image %>" alt="" /></a>
      </div>
    </div>
    <% if(count % 3 === 0){ %>
      </div>
    <% } %>
    <% count++ %>
  <% }); %>
  <% if(count % 3 !== 1){ %>   </div> <% } %>
</div>
</div>
