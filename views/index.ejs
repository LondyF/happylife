<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Happy Life</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
    <link href="https://fonts.googleapis.com/css?family=Tangerine:400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="/javascript/javascript.js" charset="utf-8"></script>
  </head>
  <body>
    <%# <div class="menu">
      <ul>
        <span><img src="/images/happylife-logo.png" alt="logo" /></span>
        <li><a href="#">Home</a></li>
        <li><a href="#">Webshop</a</li>
        <li><a href="#">About Us</a></li>
        <li><a href="#">Contact Us</a></li>
      </ul>
    </div>%>
    <div class="mainImage">
      <div class="overlay">
        <div class="menu">
          <ul>
            <li><a href="#mainContent">Webshop</a></li>
            <li><a href="#">Service</a></li>
            <li><a href="#"><i class="fa fa-home" aria-hidden="true"></a></i></li>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Contact Us</a></li>
            <span class="shoppingCart"><i class="fa fa-shopping-cart" aria-hidden="true"></i> (1)</span>
          </ul>
        </div>
        <span class="arrow"><a href="#mainContent"><i class="fa fa-angle-down"></i></a></span>
        <div class="textBox"><h1>HappyLife The Best Place To Buy Your Favorite Clothing</h1></div>
      </div>
    </div>
    <div id="mainContent">
      <div class="container">
        <h1 class="title"><span>Webshop</span></h1>
        <% var count = 1; %>
        <% products.forEach(function(product){ %>
          <% if(count % 3 === 1){ %>
            <div class="row">
          <% } %>
          <div class="four columns">
            <div class="webshopItem">
              <a href="#"><img src="<%= product.product_image %>" alt="" /></a>
              <small><%= product.product_category %></small>
              <h5 class="productName"><a href="#"><%= product.product_name %></a></h5>
              <h4 class="productPrice">f<%= product.product_price %></h4>
              <button class="button-primary">Buy Now!</button>
            </div>
          </div>
          <% if(count % 3 === 0){ %>
            </div>
          <% } %>
          <% count++ %>
        <% }); %>
        <% if(count % 3 !== 1){ %> </div> <% } %>
      </div>
    </div>
  </body>
</html>
